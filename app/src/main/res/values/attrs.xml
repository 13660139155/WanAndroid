<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <declare-styleable name="ShapeImageView">
        <attr name="format" format="enum">
            <enum name="circle" value="0"/>
            <enum name="roundRect" value="1"/>
        </attr>
        <attr name="radius" format="dimension"/>
        <attr name="corners" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="WaveTextView">
        <attr name="size" format="dimension"/>
        <attr name="color" format="color"/>
        <attr name="text" format="string"/>
        <attr name="amplitude" format="integer"/>
        <attr name="style" format="enum">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
        </attr>
    </declare-styleable>

</resources>