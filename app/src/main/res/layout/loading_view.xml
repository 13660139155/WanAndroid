<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_loading"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.library.WaveLoadingView
        android:id="@+id/wlv_loading"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_150"
        android:layout_centerInParent="true"
        app:wl_text="@string/loading"
        app:wl_waveColor="@color/colorWave"
        app:wl_textColor="@color/colorWave"
        app:wl_borderWidth="@dimen/dp_2"
        app:wl_waveBackgroundColor="@color/colorWaveBackground"
        app:wl_borderColor="@color/colorWave"/>

</RelativeLayout>